[
  {
    "name": "manager_id",
    "displayName": "Manager ID",
    "validations": {
      "pattern": {
        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
        "error-message": "Manager ID must be a valid UUID"
      }
    },
    "annotations": {
      "inputType": "text"
    },
    "permissions": {
      "view": ["admin", "user"],
      "edit": ["admin"]
    },
    "multivalued": false
  },
  {
    "name": "phone",
    "displayName": "Phone Number",
    "validations": {
      "pattern": {
        "pattern": "^(?:\\+[1-9]\\d{1,14}|0(?:\\\\d[\\\\s-]?){8}\\\\d)$",
        "error-message": "Phone must be E.164 (e.g., +84123456789) or VN 0xxxxxxxxx (spaces/dashes allowed)"
      }
    },
    "annotations": {
      "inputType": "tel"
    },
    "permissions": {
      "view": ["admin", "user"],
      "edit": ["admin", "user"]
    },
    "multivalued": false
  },
