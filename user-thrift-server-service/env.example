# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=default
SPRING_DATA_REDIS_URL=redis://localhost:6379
CACHE_PROVIDER=redis

# Thrift Server Configuration
THRIFT_SERVER_PORT=9090
THRIFT_SERVER_WORKER_THREADS=10
THRIFT_SERVER_SELECTOR_THREADS=2

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS_USER_CREATE_REQUEST=user.create.request
KAFKA_TOPICS_USER_CREATE_RESPONSE=user.create.response
KAFKA_TOPICS_USER_GET_REQUEST=user.get.request
KAFKA_TOPICS_USER_GET_RESPONSE=user.get.response
KAFKA_TOPICS_USER_UPDATE_REQUEST=user.update.request
KAFKA_TOPICS_USER_UPDATE_RESPONSE=user.update.response
KAFKA_TOPICS_USER_DELETE_REQUEST=user.delete.request
KAFKA_TOPICS_USER_DELETE_RESPONSE=user.delete.response
KAFKA_TOPICS_USER_LIST_REQUEST=user.list.request
KAFKA_TOPICS_USER_LIST_RESPONSE=user.list.response

# Resilience Configuration
RESILIENCE4J_TIMEOUT_DURATION=30s

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE=DEBUG
