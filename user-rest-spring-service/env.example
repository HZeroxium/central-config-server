# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=default
SPRING_DATA_REDIS_URL=redis://localhost:6379
CACHE_PROVIDER=redis

# Thrift Client Configuration
THRIFT_CLIENT_HOST=localhost
THRIFT_CLIENT_PORT=9090
THRIFT_CLIENT_TIMEOUT=30000
THRIFT_CLIENT_CONNECTION_POOL_SIZE=10

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Resilience Configuration
RESILIENCE4J_CIRCUITBREAKER_FAILURE_RATE_THRESHOLD=50
RESILIENCE4J_CIRCUITBREAKER_SLIDING_WINDOW_SIZE=10
RESILIENCE4J_RETRY_MAX_ATTEMPTS=3

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE=DEBUG
