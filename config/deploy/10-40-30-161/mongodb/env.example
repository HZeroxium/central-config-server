SERVICE_NAME=mongodb                               # Container name

# Host/container port mapping
HOST_MONGODB_PORT=<MONGODB_PORT>                   # Host port to expose MongoDB
CONTAINER_MONGODB_PORT=27017                       # MongoDB default internal port

# Data persistence (host path mounted into container)
MONGO_DATA_DIR=/opt/data/mongodb                   # Host directory to persist data

# Initial database
MONGO_INITDB_DATABASE=users                        # Default DB for user-watcher-service

# Optional authentication (uncomment to enable)
# MONGO_INITDB_ROOT_USERNAME=admin
# MONGO_INITDB_ROOT_PASSWORD=strong-password


