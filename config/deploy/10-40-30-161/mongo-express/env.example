SERVICE_NAME=mongo-express

# Host/container port mapping
HOST_MONGO_EXPRESS_PORT=<MONGO_EXPRESS_PORT>       # Host port for web UI
CONTAINER_MONGO_EXPRESS_PORT=8081                  # Container internal port

# Connection to MongoDB
ME_CONFIG_MONGODB_URL=mongodb://<MONGODB_HOST>:<MONGODB_PORT>/users  # URI to your MongoDB
ME_CONFIG_MONGODB_ENABLE_ADMIN=true                 # Enable admin mode (if auth is set on MongoDB)


