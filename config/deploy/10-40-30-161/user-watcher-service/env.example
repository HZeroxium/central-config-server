# =========================
# user-watcher-service â€” environment variables (example)
# =========================

# -------------------------
# Service identity & runtime
# -------------------------
SERVICE_NAME=user-watcher-service
SERVICE_ENVIRONMENT=prod

# -------------------------
# Ports & networking
# -------------------------
HOST_HTTP_PORT=28081                             # Host port for HTTP/actuator
CONTAINER_HTTP_PORT=8080                         # Spring Boot port inside container

# -------------------------
# Spring profiles & JVM
# -------------------------
SPRING_PROFILES_ACTIVE=default
JAVA_OPTS=-XX:+UseG1GC -XX:MaxRAMPercentage=75.0

# -------------------------
# Kafka connectivity
# -------------------------
SPRING_KAFKA_BOOTSTRAP_SERVERS=<KAFKA_HOST>:<KAFKA_PORT>

# -------------------------
# Persistence selection & connection strings
# -------------------------
APP_PERSISTENCE_TYPE=mongo                        # mongo or jpa
SPRING_DATA_MONGODB_URI=mongodb://<MONGODB_HOST>:<MONGODB_PORT>/users  # External MongoDB URI

# If switching to JPA (H2/Postgres), provide JDBC values
JDBC_URL=jdbc:h2:mem:userdb;DB_CLOSE_DELAY=-1;MODE=LEGACY
JDBC_DRIVER=org.h2.Driver
JDBC_USERNAME=sa
JDBC_PASSWORD=password

# -------------------------
# Observability
# -------------------------
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=*
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true

# -------------------------
# Logging labels for promtail
# -------------------------
LOG_LABEL_SERVICE=user-watcher-service
LOG_LABEL_ENVIRONMENT=docker


