# Spring Boot Admin Server Environment Configuration

# Application Configuration
ENVIRONMENT=development
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE_ADMIN=DEBUG

# Server Configuration
SERVER_PORT=8083

# Spring Boot Admin Configuration
SPRING_BOOT_ADMIN_SERVER_CONTEXT_PATH=/admin
SPRING_BOOT_ADMIN_SERVER_MONITOR_PERIOD=10s
SPRING_BOOT_ADMIN_SERVER_MONITOR_STATUS_LIFETIME=10s
SPRING_BOOT_ADMIN_SERVER_MONITOR_INFO_LIFETIME=1m

# Security Configuration (for development)
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=admin
SPRING_SECURITY_USER_ROLES=ADMIN

# Management Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=*
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_ENDPOINT_HEALTH_SHOW_COMPONENTS=always
MANAGEMENT_METRICS_TAGS_APPLICATION=spring-boot-admin-server
MANAGEMENT_METRICS_TAGS_SERVICE=spring-boot-admin-server
MANAGEMENT_METRICS_TAGS_ENVIRONMENT=development

# Tracing Configuration
MANAGEMENT_TRACING_SAMPLING_PROBABILITY=1.0
